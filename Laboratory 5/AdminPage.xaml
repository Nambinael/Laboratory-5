<Page x:Class="Laboratory_5.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laboratory_5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content = "Добавление роли" Click="Button_Click_1" />
        <Button Content = "Добавление пользователя" Grid.Column="1" Click="Button_Click"/>
        <Button Content = "Список товаров" Grid.Column="2" Click="Button_Click_2"/>
        <Button Content = "Чек" Grid.Column="3" Click="Button_Click_3"/>
        <ComboBox x:Name="TableCbx" Grid.Column="4" SelectionChanged="TableCbx_SelectionChanged"  />
        <Frame x:Name="SecondFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Grid.RowSpan="4" Grid.ColumnSpan="5"/>
    </Grid>
</Page>
